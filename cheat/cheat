# To see example usage of a program:
cheat <command>

# check CHEAT_PATH folder
cheat -d

# To edit a cheatsheet
cheat -e <command>

# To list available cheatsheets
cheat -l

# To search available cheatsheets
cheat -s <command>

# To get the current `cheat' version
cheat -v


      https://github.com/chrisallenlane/cheat

      
      pip install cheat

      # insert following lines into ~/.bashrc
      export CHEAT_EDITOR=vi
      export CHEATCOLORS=true
      export CHEAT_USER_DIR='~/myproject/mytools/cheat'
      export CHEAT_PATH='/home/liangjie/anaconda3/lib/python3.6/site-packages/usr/share/cheat'
      # you can not set CHEAT_PATH="~/anaconda3/lib/python3.6/site-packages/usr/share/cheat"

      # sync with github
      cd ~/myproject
      git clone https://github.com/ywllyht/mytools.git
